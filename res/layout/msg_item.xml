<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:id="@+id/robot_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="12sp"/>
        
        <ImageView 
            android:id="@+id/robot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/robot_time"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:src="@drawable/tuling"
            />
        
        <TextView 
            android:id="@+id/robot_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/robot_time"
            android:layout_toRightOf="@id/robot"
            android:layout_marginRight="50dp"
            android:background="@drawable/aio_friend_bg_nor_11"
            android:gravity="center"
            />
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:id="@+id/user_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="12sp"/>
        
        <ImageView 
            android:id="@+id/user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/user_time"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/me"
            />
        
        <TextView 
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_time"
            android:layout_toLeftOf="@id/user"
            android:layout_marginLeft="50dp"
            android:background="@drawable/aio_user_bg_nor_11"
            android:gravity="center"
            />
    </RelativeLayout>
</LinearLayout>
